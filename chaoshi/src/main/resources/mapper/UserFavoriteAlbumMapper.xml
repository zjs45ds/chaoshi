<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.chaoshi.mapper.UserFavoriteAlbumMapper">

    <!-- 结果集映射 -->
    <resultMap id="BaseResultMap" type="org.example.chaoshi.entity.UserFavoriteAlbum">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="album_id" property="albumId" jdbcType="BIGINT"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="deleted" property="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, user_id, album_id, created_at, deleted
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_favorite_albums
        WHERE id = #{id} AND deleted = 0
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_favorite_albums
        WHERE deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根据用户ID查询收藏专辑 -->
    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_favorite_albums
        WHERE user_id = #{userId} AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 检查用户是否收藏了指定专辑 -->
    <select id="existsByUserIdAndAlbumId" resultType="java.lang.Boolean">
        SELECT COUNT(*) > 0
        FROM user_favorite_albums
        WHERE user_id = #{userId} AND album_id = #{albumId} AND deleted = 0
    </select>

    <!-- 插入收藏记录 -->
    <insert id="insert" parameterType="org.example.chaoshi.entity.UserFavoriteAlbum" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_favorite_albums (user_id, album_id, created_at)
        VALUES (#{userId}, #{albumId}, #{createdAt})
    </insert>

    <!-- 逻辑删除收藏记录 -->
    <update id="deleteByUserIdAndAlbumId">
        UPDATE user_favorite_albums
        SET deleted = 1
        WHERE user_id = #{userId} AND album_id = #{albumId} AND deleted = 0
    </update>

    <!-- 物理删除收藏记录 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM user_favorite_albums WHERE id = #{id}
    </delete>

    <!-- 分页查询用户收藏专辑 -->
    <select id="selectPageByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_favorite_albums
        WHERE user_id = #{userId} AND deleted = 0
        ORDER BY created_at DESC
        LIMIT #{offset}, #{size}
    </select>

    <!-- 统计用户收藏专辑数量 -->
    <select id="countByUserId" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM user_favorite_albums
        WHERE user_id = #{userId} AND deleted = 0
    </select>

    <!-- 批量插入收藏记录 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO user_favorite_albums (user_id, album_id, created_at)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.userId}, #{item.albumId}, #{item.createdAt})
        </foreach>
    </insert>

    <!-- 批量删除收藏记录 -->
    <update id="batchDeleteByUserIdAndAlbumIds">
        UPDATE user_favorite_albums
        SET deleted = 1
        WHERE user_id = #{userId} AND deleted = 0
        AND album_id IN
        <foreach collection="albumIds" item="albumId" open="(" separator="," close=")">
            #{albumId}
        </foreach>
    </update>

</mapper>
