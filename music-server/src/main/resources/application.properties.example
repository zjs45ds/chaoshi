# 应用名称
spring.application.name=chaoshi

# 服务器配置 - 使用8081端口避免冲突
server.port=8081
server.servlet.context-path=/

# 数据库配置 (请修改为你的数据库信息)
spring.datasource.url=jdbc:mysql://localhost:3306/chaoshi-vue?useUnicode=true&characterEncoding=utf-8&useSSL=false&serverTimezone=Asia/Shanghai
spring.datasource.username=your_username
spring.datasource.password=your_password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# MyBatis配置
mybatis.mapper-locations=classpath*:/mapper/**/*.xml
mybatis.type-aliases-package=org.example.chaoshi.entity
mybatis.configuration.map-underscore-to-camel-case=true
mybatis.configuration.log-impl=org.apache.ibatis.logging.stdout.StdOutImpl


# JWT配置 (建议修改为你自己的密钥)
jwt.secret=your-jwt-secret-key
jwt.expiration=86400

# 跨域配置
cors.allowed-origins=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8081,http://127.0.0.1:8081,http://localhost:3001

# Swagger配置
springdoc.api-docs.enabled=true
springdoc.swagger-ui.enabled=true
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.api-docs.path=/v3/api-docs

# 日志配置
logging.level.org.example.chaoshi=DEBUG
logging.level.org.springframework.security=DEBUG
logging.pattern.console=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n

# MinIO配置 (请修改为你的MinIO信息)
minio.endpoint=http://localhost:9000
minio.accessKey=your_access_key
minio.secretKey=your_secret_key
minio.bucketName=chaoshi
