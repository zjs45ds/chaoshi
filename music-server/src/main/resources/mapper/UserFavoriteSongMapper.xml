<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaoshi.mapper.UserFavoriteSongMapper">

    <!-- 结果集映射 -->
    <resultMap id="BaseResultMap" type="com.chaoshi.entity.UserFavoriteSong">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="song_id" property="songId" jdbcType="BIGINT"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="deleted" property="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, user_id, song_id, created_at, deleted
    </sql>

    <!-- 根据ID查询用户收藏歌曲 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_favorite_songs
        WHERE id = #{id}
    </select>

    <!-- 查询所有用户收藏歌曲 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_favorite_songs
        WHERE deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根据用户ID查询收藏歌曲 -->
    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_favorite_songs
        WHERE user_id = #{userId} AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 检查用户是否收藏了指定歌曲 -->
    <select id="existsByUserIdAndSongId" resultType="java.lang.Boolean">
        SELECT COUNT(*) > 0
        FROM user_favorite_songs
        WHERE user_id = #{userId} AND song_id = #{songId} AND deleted = 0
    </select>

    <!-- 插入收藏记录 -->
    <insert id="insert" parameterType="com.chaoshi.entity.UserFavoriteSong" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_favorite_songs (user_id, song_id, created_at, deleted)
        VALUES (#{userId}, #{songId}, NOW(), 0)
        ON DUPLICATE KEY UPDATE
        deleted = 0,
        created_at = NOW()
    </insert>

    <!-- 逻辑删除收藏记录（取消收藏） -->
    <update id="deleteByUserIdAndSongId">
        UPDATE user_favorite_songs
        SET deleted = 1
        WHERE user_id = #{userId} AND song_id = #{songId} AND deleted = 0
    </update>

    <!-- 物理删除收藏记录 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM user_favorite_songs
        WHERE id = #{id}
    </delete>

    <!-- 分页查询用户收藏歌曲 -->
    <select id="selectPageByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_favorite_songs
        WHERE user_id = #{userId} AND deleted = 0
        ORDER BY created_at DESC
        LIMIT #{offset}, #{size}
    </select>

    <!-- 统计用户收藏歌曲数量 -->
    <select id="countByUserId" parameterType="java.lang.Long" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM user_favorite_songs
        WHERE user_id = #{userId} AND deleted = 0
    </select>

    <!-- 批量插入收藏记录 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO user_favorite_songs (user_id, song_id, created_at, deleted)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.userId}, #{item.songId}, NOW(), 0)
        </foreach>
    </insert>

    <!-- 批量删除收藏记录 -->
    <update id="batchDeleteByUserIdAndSongIds">
        UPDATE user_favorite_songs
        SET deleted = 1
        WHERE user_id = #{userId} AND song_id IN
        <foreach collection="songIds" item="songId" open="(" separator="," close=")">
            #{songId}
        </foreach>
        AND deleted = 0
    </update>

</mapper>